{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "backend/Dockerfile"
    },
    "deploy": {
        "startCommand": "sh -c \"uvicorn pulse_backend.asgi:application --host 0.0.0.0 --port ${PORT:-8080} --proxy-headers\"",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE"
    }
}