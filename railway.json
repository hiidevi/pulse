{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "backend/Dockerfile"
    },
    "deploy": {
        "startCommand": "daphne -b 0.0.0.0 -p $PORT pulse_backend.asgi:application",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
    }
}