{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "backend/Dockerfile"
    },
    "deploy": {
        "startCommand": "python manage.py migrate && uvicorn pulse_backend.asgi:application --host 0.0.0.0 --port $PORT --proxy-headers",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE"
    }
}